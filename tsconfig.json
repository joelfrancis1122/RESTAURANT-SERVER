{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    // "rootDir": "./src",
    "strict": true,
    /* Strict Type-Checking */
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    /* Decorator Support */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    /* Advanced */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "adapter/*": [
        "adapter/*"
      ],
      "config/*": [
        "config/*"
      ],
      "framework/*": [
        "framework/*"
      ],
      "usecase/*": [
        "src/usecase/*"
      ],
      "@domain/*": [
        "domain/*"
      ],
      "@application/*": [
        "application/*"
      ],
      "@infrastructure/*": [
        "infrastructure/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts"
  ]
}